{
  "root": true,
  "extends": ["@nuxtjs/eslint-config-typescript"],
  "rules": {
    "space-before-function-paren": "off",
    "comma-dangle": "off",
    "arrow-parens": ["error", "always"],
    "curly": ["error", "multi-line"],
    "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": [
      "error",
      { "functions": false, "classes": false, "variables": false }
    ],
    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": [
      "error",
      { "builtinGlobals": false, "ignoreDeclarationMerge": true }
    ],
    "no-void": ["error", { "allowAsStatement": true }],
    "require-await": "off",
    "@typescript-eslint/require-await": "error",
    "@typescript-eslint/consistent-type-imports": [
      "error",
      { "fixStyle": "inline-type-imports" }
    ],
    "@typescript-eslint/no-extra-semi": "off",
    "indent": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-useless-constructor": "warn",
    "brace-style": "off"
  },
  "overrides": [
    //
    // ./apps/docs/tsconfig.json
    {
      "files": ["./apps/docs/**/*.{ts,tsx,vue}"],
      "parserOptions": {
        "project": "./apps/docs/tsconfig.json"
      },
      "rules": {
        "vue/max-attributes-per-line": "off",
        "vue/multi-word-component-names": "off"
      }
    },
    //
    // ./apps/playground/tsconfig.json
    {
      "files": ["./apps/playground/**/*.{ts,tsx,vue}"],
      "parserOptions": {
        "project": "./apps/playground/tsconfig.json"
      }
    },
    //
    //./packages/vintl-nuxt/tsconfig.json
    {
      "files": [
        "./packages/vintl-nuxt/src/**/*.ts",
        "./packages/vintl-nuxt/types/*.d.ts"
      ],
      "excludedFiles": ["./packages/vintl-nuxt/src/runtime/**/*.ts", "dist"],
      "parserOptions": {
        "project": "./packages/vintl-nuxt/tsconfig.json"
      }
    },
    //
    // ./packages/vintl-nuxt/tsconfig.build.json
    {
      "files": ["./packages/vintl-nuxt/build.config.ts"],
      "parserOptions": {
        "project": "./packages/vintl-nuxt/tsconfig.build.json"
      }
    },
    //
    // ./packages/vintl-nuxt/tsconfig.runtime.json
    {
      "files": [
        "./packages/vintl-nuxt/src/runtime/**/*.ts",
        "./packages/vintl-nuxt/src/runtime/**/*.mts",
        "./packages/vintl-nuxt/types/*.d.ts"
      ],
      "parserOptions": {
        "project": "./packages/vintl-nuxt/tsconfig.runtime.json"
      }
    }
  ]
}
