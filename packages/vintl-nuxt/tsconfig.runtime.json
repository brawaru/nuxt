{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,

    "module": "ESNext",
    "moduleResolution": "nodenext",

    "types": ["./types/nuxt"],

    "outDir": "./dist",
    "paths": {
      "#imports": ["./stubs/imports.js"]
    }
  },
  "include": [
    "./stubs/*.d.ts",
    "./stubs/*.js",
    "./src/runtime/**/*.ts",
    "./src/runtime/**/*.mts",
    "./types/*.d.ts"
  ]
}
